<!DOCTYPE html>
<html>
<head>
  <title>DeployWatch</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
			<a class="brand" href="#">Deploy Watcher</a>
	  </div>
	</div>	
	<div class="container">
		<% if notice %>
		<div class="alert alert-success">
		  <button type="button" class="close" data-dismiss="alert">×</button>
			<%= notice %>
		</div>
		<% end %>
		<% if alert %>
		<div class="alert">
		  <button type="button" class="close" data-dismiss="alert">×</button>
			<%= alert %>
		</div>
		<% end %>
	  <div class="row">
	    <div class="span12">
				<%= yield %>
	    </div>
	  </div>
	</div>	
</body>
</html>
